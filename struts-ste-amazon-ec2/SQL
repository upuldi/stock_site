CREATE TABLE `Comments` (
	`ID` INT(10) NOT NULL AUTO_INCREMENT,
	`NAME` VARCHAR(50) NULL DEFAULT '0',
	`SUBJECT` VARCHAR(50) NULL DEFAULT '0',
	`MESSAGE` VARCHAR(200) NULL DEFAULT '0',
	`EMAIL` VARCHAR(50) NULL DEFAULT '0',
	PRIMARY KEY (`ID`)
)
COLLATE='latin1_swedish_ci'
ENGINE=InnoDB
ROW_FORMAT=DEFAULT


CREATE TABLE `upuldi_CSEDAILYDATA`.`LISTED_COMPANY` (
  `ID` SMALLINT  NOT NULL AUTO_INCREMENT,
  `COMPANY_NAME` VARCHAR(50) ,
  `SECTOR` VARCHAR(50) ,
  `BOARD` VARCHAR(50)  NOT NULL,
  PRIMARY KEY (`ID`)
)COLLATE='latin1_swedish_ci'
ENGINE=InnoDB
ROW_FORMAT=DEFAULT


CREATE TABLE `upuldi_CSEDAILYDATA`.`COMPANY_TICKER` (
  `ID` INT  NOT NULL AUTO_INCREMENT,
  `COMPANY_ID` SMALLINT  NOT NULL,
  `TICKER` VARCHAR(30)  NOT NULL,
  `CSE_ID` VARCHAR(10)  NOT NULL,
  PRIMARY KEY (`ID`)
)
COLLATE='latin1_swedish_ci'
ENGINE=InnoDB
ROW_FORMAT=DEFAULT



